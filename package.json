{
  "name": "ciagent",
  "version": "0.1.0",
  "description": "Vendor-neutral AI agent CLI tool for CI/CD pipelines",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "type-check": "bun tsc --noEmit",
    "lint": "bun run lint:fix",
    "lint:fix": "echo 'Lint will be configured with specific tools later'",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "build": "bun run build:cli",
    "build:cli": "cd packages/cli && bun build --compile --minify --sourcemap --bytecode src/cli.ts --outfile ../../dist/cia",
    "dev:cli": "bun packages/cli/src/cli.ts"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "^1.3.9",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "cli",
    "ai",
    "agent",
    "cicd",
    "devops",
    "automation"
  ],
  "author": "ciagent",
  "license": "MIT"
}