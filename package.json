{
  "name": "ciagent",
  "version": "0.1.0",
  "description": "Vendor-neutral AI agent CLI tool for CI/CD pipelines",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "type-check": "npx tsc --noEmit",
    "lint": "eslint packages/*/src/**/*.ts",
    "lint:fix": "eslint packages/*/src/**/*.ts --fix && prettier --write packages/*/src/**/*.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "build": "npm run build:cli",
    "build:cli": "cd packages/cli && bun build --compile --minify --sourcemap --bytecode src/cli.ts --outfile ../../dist/cia",
    "dev:cli": "bun packages/cli/src/cli.ts",
    "ci": "npm run lint && npm run type-check && vitest run && echo 'Build step skipped (requires Bun)'"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^1.6.0",
    "bun-types": "^1.3.9",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "typescript": "^5.0.0",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "cli",
    "ai",
    "agent",
    "cicd",
    "devops",
    "automation"
  ],
  "author": "ciagent",
  "license": "MIT"
}
